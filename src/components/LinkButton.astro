---
const { text, icon: Icon, url, target } = Astro.props;
---

<a
  class="dark:bg-fountain-blue-500 bg-yellow-500 text-fountain-blue-950 dark:hover:bg-yellow-500 hover:bg-fountain-blue-500 transition-all ease-in-out duration-300 rounded-md py-2 px-10 flex justify-between items-center gap-2"
  href={url}
  target={target}
>
  {(<Icon />)}
  <span class="hidden sm:block">{text}</span>
</a>
