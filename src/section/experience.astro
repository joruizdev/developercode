---

<section class="py-24">
  <div class="bg-center container mx-auto">
    <h2
      class="text-start text-3xl text-stone-700 dark:text-fountain-blue-500 pb-10 xl:text-4xl xl:pb-20 px-5 flex items-center gap-5"
    >
      Experiencia
    </h2>
    {
      EXPERIENCE.map(
        ({
          title,
          dateInit,
          dateEnd,
          description,
          technology,
          subTitle,
          company,
          description2,
        }) => {
          return (
            <div class="px-5 py-5">
              <div class="flex dark:text-[#fff] text-stone-700 gap-4">
                <div class="border border-l border-yellow-500 rounded-md" />
                <div>
                  <h3 class="text-xl">{title}</h3>

                  <div class="text-sm py-1 flex items-center gap-2 w-50 text-yellow-500 dark:text-fountain-blue-300">
                    <span>{company}</span>
                    <span>{dateInit}</span>
                    <span>-</span>
                    <span>{dateEnd}</span>
                  </div>

                  <h4 class="pt-5 pb-3 text-fountain-blue-700 dark:text-yellow-500">
                    {subTitle}
                  </h4>

                  <p class=" pb-4 text-pretty">{description}</p>
                  {description2 && (
                    <p class=" pb-4 text-pretty">{description2}</p>
                  )}
                  {technology && <p class=" pb-4">{technology}</p>}
                </div>
              </div>
            </div>
          );
        }
      )
    }
  </div>
  <span id="about"></span>
</section>
